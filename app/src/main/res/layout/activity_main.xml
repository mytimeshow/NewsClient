<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context="com.example.administrator.newsclient.Activity.MainActivity"
    <LinearLayout

        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toobar"
            android:background="@color/colorAccent"

            app:title="不顾一切的奋斗"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        </android.support.v4.view.ViewPager>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ff33cc"/>

        <RadioGroup
            android:id="@+id/rg_01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <RadioButton

                android:id="@+id/rb_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_home_tab_photo_01"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="新闻"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_photo_02"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="视听"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_photo_03"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="阅读"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_photo_04"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="发现"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:button="@null"
                android:drawableTop="@drawable/selector_home_tab_photo_05"
                android:gravity="center"
                android:paddingTop="0dp"
                android:text="设置"
                android:textColor="@drawable/selector_home_tab"
                android:textSize="12sp"/>
        </RadioGroup>
    </LinearLayout>

    <!--//侧滑部分-->
<android.support.design.widget.NavigationView
    android:id="@+id/navigation_view"
    android:background="#00000000"
    android:layout_gravity="start"
    app:headerLayout="@layout/navigation_view_header"
    app:menu="@menu/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>


